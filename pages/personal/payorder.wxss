/* pages/personal/payorder.wxss */
.addr {
  padding: 40rpx;
  position: relative;
  background: #fff url(data:image/png;base64,)  repeat-x bottom left ;
  background-size: 52rpx;
}
.addr::after {
    content: "";
    position: absolute;
    right: 30rpx;
    top: 50%;
    width: 14rpx;
    height: 14rpx;
    border-left: 1px solid currentColor;
    border-top: 1px solid currentColor;
    transform: translate3d(0,-50%,0) rotate(135deg);
     -webkit-transform: translate3d(0,-50%,0) rotate(135deg); 
}
.addr-np {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}
.addr-np text {
  margin-right: 12rpx;
}
.addr-content {
  font-size: 26rpx;
  margin-right: 26rpx;
  line-height: 26rpx;
}
.cart {
  margin-top: 26rpx;
  margin-left: 20rpx;
}
.cart-item {
  display: flex;
}
.cart-item image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 14rpx;
}
.cart-item-content {
  font-size: 28rpx;
  margin-top: 20rpx;
}
.cart-item-content-name {
  height: 56rpx;
  font-weight: 700;
}
.red {
  color: red;
}
.bottom_bar {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  z-index: 1;
  height: 80rpx;
  font-size: 26rpx;
  text-align: center;
  color: #fff; 
  /* box-sizing: content-box; */
  width: 100%;
}
.bail {
  width: 496rpx;
  background: #4f4f4f;
  line-height: 80rpx;
}
.pay {
  flex-grow:1;
  /* width: 254rpx;  */
  background: orange;
  line-height: 80rpx;
}