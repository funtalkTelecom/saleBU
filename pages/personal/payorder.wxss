/* pages/personal/payorder.wxss */
.addr {
  padding: 40rpx;
  position: relative;
  background: #fff url(data:image/png;base64,)  repeat-x bottom left ;
  background-size: 52rpx;
}
.addr::after {
    content: "";
    position: absolute;
    right: 30rpx;
    top: 50%;
    width: 14rpx;
    height: 14rpx;
    border-left: 1px solid currentColor;
    border-top: 1px solid currentColor;
    transform: translate3d(0,-50%,0) rotate(135deg);
    -webkit-transform: translate3d(0,-50%,0) rotate(135deg); 
}
.addr-np {
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.addr-np text {
  margin-right: 12rpx;
}
.addr-content {
  font-size: 26rpx;
  margin-right: 26rpx;
  line-height: 36rpx;
}
.cart {
  margin: 6% 3%;
}
.cart-item {
  margin-bottom: 2%;
}
.cartl {
  width: 17%;
  float: left;
}
.cart-item-content {
  font-size: 28rpx;
  margin-top: 10rpx;
  width: 80%;
  float: right;
}
.cart-item-content-name {
  height: 56rpx;
  font-weight: 700;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.red {
