.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top; 
}
.header .location {
	color: #fff;
	font-size: 25rpx;
	line-height: 40rpx;
	min-width: 248rpx;
	max-width: 3500rpx;
	padding: 10rpx 20rpx 10rpx 10rpx;
	border-radius: 30rpx;
	background: rgba(0,0,0,0.3);
	margin-right: 20rpx;
	vertical-align: middle;
}
.header .search{
  -webkit-flex: 1;
  color: #888;
	font-size: 25rpx;
	line-height: 40rpx;
  padding: 10rpx;
	border-radius: 30rpx;
	background: #fff;
} 
