.border-bottom{
  width: 80%;
  margin: 20rpx auto ;
  padding-bottom: 16rpx;
  border-bottom:1rpx solid #B0B0B0;
  text-align: center;
}
.border-bottom view {
  display: inline-block;
  box-sizing: border-box;
  vertical-align:middle;
}
.border-bottom .round {
  width: 48rpx;
  height: 48rpx;
  border: 1rpx solid cyan;
  border-radius: 50%;
  line-height: 48rpx; 
  position: relative;
  
}
.border-bottom .nametype {
  font-size: 38rpx;
  margin: 0 30rpx;
  font-weight: 700;
}
.border-bottom view text{
  display: block;
  width: 32rpx;
  height: 32rpx; 
  line-height: 32rpx;  
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); 

}
