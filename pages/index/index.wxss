.header{
  position: fixed;
  display: -webkit-flex;
  top:0;
  left: 0;
  width: 100%;
  padding: 20rpx;
	z-index: 1;
   box-sizing: border-box; 
  -webkit-transition: background 0.5s ease-in-out;
}
.header.scrolled {
	background: #feb70f;
}
/* .header text {
