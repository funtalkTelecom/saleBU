/* 头部开始 */
.header {
  background: #66ccff;
  padding: 20rpx;
  display: flex;
   position: fixed;
  top: 0;
  left: 0; 
  width: 100%;
  box-sizing: border-box;
  z-index: 999;
}
.search {
  display: flex;
  flex: 1;
  background: #fff;
  border-radius: 30rpx;
  align-items:center;
}
.search text {
  height: 100%;
  margin: 10rpx 16rpx;
  color: #999;
  font-size: 40rpx;
}
.search input {
  font-size: 26rpx;
  width: 100%;
}
.sicon {
  flex: 1;
}
.sinput {
  flex: 8;
}
.but button {
  font-size: 25rpx;
  margin-left: 40rpx;
}
/* 头部结束 */
/* 条件开始 */
.main {
  padding: 40rpx 30rpx 0;
  margin-top: 100rpx;
}
.lianghao-th {
  overflow:hidden;
}
.title {
  font-size: 32rpx;
}
.float-right{
   float: right;
   width: 50rpx;
   text-align: center; 
}
.float-left{
   float: left; 
}
.options {
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
  margin-top: 20rpx;  
}
.options view {
  width:20%; 
  margin: 1rpx;
  padding:10rpx 0;
  border:1rpx solid #ccc;
  text-align:center; 
  margin-bottom: 20rpx; 
  font-size:25rpx;  
  border-radius: 15rpx;
  background:#F8F8F8;
   /* border-style:outset;
     
  background:gainsboro;   */
}
.spacing {
  justify-content:flex-start;
}
.spacing view {
  margin-right: 40rpx;
}
.options .active {
  background: #66ccff;
  color: #fff;
  border: 2rpx solid #66ccff;
}

/* 条件结束 */
