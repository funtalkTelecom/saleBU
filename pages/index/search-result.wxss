page{
  display: flex;  
  flex-direction: column;  
  /* height: 100%; */
  background-color: #f2f2f2;
  }
.container {
  flex: auto;  
  display: flex;  
  background-color: #f2f2f2;
  flex-direction: column;
}
.filters{
  display: flex;
  z-index: 999;
  box-sizing: border-box;
  background-color: #fff;
  width: 100%;
  flex: none;  
  border-bottom: 2rpx solid #dedede;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 6rpx 6rpx 6rpx #ddd;
}
.filters > view{
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow: hidden;
  width: 25%;
  text-align: center;
  font-size: 26rpx;
  border-right: 1rpx solid #dedede;
  padding: 16rpx 0;
}
.sx {
  font-size: 32rpx;
}
.sxs {
  font-size: 22rpx;
  white-space: pre-wrap;
  color: #555;
  margin-top: 6rpx;
}
.result {
  display: flex;
}
.box{
  display: flex;
}
.box-1{
  flex-direction: row;
  flex-wrap: wrap;
  margin: 2%;
}
.box-item{
  width: 47%;
  text-align: center;
  margin: 1.5%;
  /* box-sizing:border-box; */
  background-color: #fff;
  padding: 2% 0 3%;
  border-radius: 20rpx;
  box-shadow: 4rpx 4rpx 12rpx #ddd;
}
.phone{
  font-weight:600;
  font-size: 28rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 12rpx;
}
.phone-desc{
  display: block;
  font-size: 25rpx;
  /* position: relative;
  right: -25rpx; */
}
.phone-price{
  display: block;
  font-size: 24rpx;
  line-height: 40rpx;
  /* position: relative;
  right: -43rpx; */
}

.loading {
  text-align: center;
  margin: 40rpx 0 16rpx;
  font-size: 26rpx;
  color: #00b2ee;
}
.color-orange {
  color: orange;
  margin-right: 4rpx;
}
/* ---------------------------- */
.cardbody-main {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.cardbody-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 12rpx;
  width: 49%;
  background-color: #fff;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.item-phone {
  font-weight: 700;
}

.item-price, .item-desc {
  font-size: 14px;
}

.color-cyan {
  color: #00b2ee;
}

.color-orange {
  color: orange;
  font-weight: 700;
}
.item-contact {
  font-size: 12px;
  color: #999;
}
