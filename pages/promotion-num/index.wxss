/* pages/promotion-num/index.wxss */
page{
  font-size: 28rpx;
}
.num-title {
  line-height:70rpx;
  border-bottom:1px solid #e7e7e7;
  padding:0 20rpx;
}
.num {
  display: flex;
  flex-wrap: wrap;
  line-height: 70rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #e7e7e7;
}
.num view{
  width: 33.3333%;
}
.num .flex{
  flex: 1
}
.share-head {
  padding: 10rpx 30rpx 0 20rpx;
  border-bottom: 1px solid #cecfce;
  line-height: 80rpx;
  height: 80rpx;
}
.share-left {
  position:relative;
  padding-left: 10rpx;
}
.share-left::before {
  content: "";
  position:absolute;
  width: 6rpx;
  height: 100%;
  background-color: red;
  top: 50%;
  left: 0;
  transform: translate(0,-50%)
}
.copy-text {
  padding:30rpx 70rpx 0 32rpx;
  color:#9c9a9c;
}
.path-text{
  padding:10rpx 30rpx 36rpx 32rpx;
  color:#9c9a9c;
  word-break:break-all;
}
.prompt-text{
  padding-left:32rpx;
  color:#9c9a9c;
}
.invite-box{
  padding:0 30rpx 50rpx 30rpx;
}
.image-item{
  display:flex;
  align-items:center;
  padding:36rpx 0 28rpx 0;
  border-bottom:1px solid #e7e7e7;
}
.image-item image{
  width:100rpx;
  height:100rpx;
  border-radius:50%;
}
.invite-item {
  display:flex;
  align-items:center;
  padding:30rpx 0 22rpx 0;
  border-bottom:1px solid #e7e7e7
}
.icon-tubiao- {
  font-size: 70rpx;
}
.invite-box button {
  height:80rpx;
  font-size:28rpx;
  border:none;
  line-height:80rpx;
  margin-top:28rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  /* background-color: rgba(0, 0, 0, 0.5); */
  z-index: 9;
  overflow: hidden;
}
.mask-view {
   width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 19;
  overflow: hidden;
}

.zhongxin {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 99;
}

.mask image {
   width: 200px;
    height: 358px; 
    /* height: 500px;    */
}
.save {
  margin-top: 25px;
  width: 100%;
  line-height: 40px;
  font-size: 16px;
  background-color: orange;
  border-radius: 20px;
  text-align: center;
  color: #fff;
}