@import "../../utils/iconfont.wxss";
@import "../../utils/address.wxss";



page {
  display: flex;
  flex-direction: column;
  height: 100%;
  font-size: 32rpx;
}

.container {
  display: flex;
  flex-direction: column;
}

/* 地址开始 */



/* 商品开始 */

.product {
  border: 1rpx solid #e4e4e4;
  border-radius: 20rpx;
  margin: 0rpx 10rpx;
}

.product-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 10rpx 10rpx 0rpx 10rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #e4e4e4;
  color: #333;
}

.product-main {
  display: flex;
  align-items: center;
  padding: 30rpx 60rpx 20rpx 16rpx;
}

.product-main image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
}

.product-np {
  font-size: 28rpx;
  color: #666;
}

.product-content {
  font-size: 28rpx;
  display: flex;
  color: #666;
  justify-content: space-between;
}

.product-content text {
  color: red;
}
/* 保证金开始 */
.bail {
  border: 1rpx solid #e4e4e4;
  border-radius: 20rpx;
  margin: 30rpx 10rpx 0rpx 10rpx;
}
.bail-main {
  padding: 20rpx 16rpx;
  font-size: 26rpx;
}
.bail-main text {
  color: red;
}
/* 支付方式开始*/

.paymode {
  border: 1rpx solid #e4e4e4;
  border-radius: 20rpx;
  margin: 30rpx 10rpx 80rpx 10rpx;
}

.paymode-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 10rpx 10rpx 0rpx 10rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #e4e4e4;
  color: #333;
}

.paymode-main {
  display: flex;
}

.paymode-main view {
  border: 1rpx solid #666;
  border-radius: 20rpx;
  padding: 16rpx 56rpx;
  font-size: 24rpx;
  margin: 32rpx 20rpx 24rpx;
}

.offline {
  font-size: 28rpx;
  padding: 20rpx;
  line-height: 30rpx;
}

.paymode .active {
  border: 1rpx solid #f60;
  color: #f60;
}

.pay {
  position: fixed;
  bottom: 0;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  border-top: 1rpx solid #e4e4e4;
  z-index: 999;
  background-color: #fff;
}
.pay view:first-child {
  color: #ff3300;
  font-weight: 700;
}
.pay view:last-child {
  background: #ff3300;
  color: #fff;
  border-radius: 20rpx;
  padding: 12rpx 32rpx;
}
