@import "../../utils/iconfont.wxss";
@import "../../utils/address.wxss";



page {
  display: flex;
  flex-direction: column;
     /* height: 100%;    */
  font-size: 32rpx;
   padding-bottom: 80rpx; 
}

.container {
  display: flex;
  flex-direction: column;
}

/* 地址开始 */



/* 商品开始 */

.product {
  border: 1rpx solid #e4e4e4;
  border-radius: 20rpx;
  margin: 0rpx 10rpx;
}

.product-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 10rpx 10rpx 0rpx 10rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #e4e4e4;
  color: #333;
}

.product-main {
  display: flex;
  align-items: center;
  padding: 30rpx 60rpx 20rpx 16rpx;
}

.product-main image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
}

.product-np {
  font-size: 28rpx;
  color: #666;
}

.product-content {
  font-size: 28rpx;
  display: flex;
  color: #666;
  justify-content: space-between;
}

.product-content text {
  color: red;
}
/* 保证金开始 */
.bail {
  border: 1rpx solid #e4e4e4;
  border-radius: 20rpx;
  margin: 30rpx 10rpx 0rpx 10rpx;
}
.bail-main {
  padding: 20rpx 16rpx;
  font-size: 26rpx;
}
.bail-main text {
  color: red;
}
/* 支付方式开始*/

.paymode {
  border: 1rpx solid #e4e4e4;
  border-radius: 20rpx;
  margin: 30rpx 10rpx 80rpx 10rpx;
}

.paymode-title {
  font-size: 30rpx;
  font-weight: 700;
  margin: 10rpx 10rpx 0rpx 10rpx;
  padding: 10rpx;
  border-bottom: 1rpx solid #e4e4e4;
  color: #333;
}

.paymode-main {
  display: flex;
}

.paymode-main view {
  border: 1rpx solid #666;
  border-radius: 20rpx;
  padding: 16rpx 56rpx;
  font-size: 24rpx;
  margin: 32rpx 20rpx 24rpx;
}

.offline {
  font-size: 28rpx;
  padding: 20rpx;
  line-height: 30rpx;
}

.paymode .active {
  border: 1rpx solid #f60;
  color: #f60;
}

.pay {
  position: fixed;
  bottom: 0;
  display: flex;
  padding: 0 30rpx;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  border-top: 1rpx solid #e4e4e4;
  z-index: 999;
  background-color: #fff;
}
.pay view:first-child {
  color: #ff3300;
  font-weight: 700;
}
.pay view:last-child {
  background: #ff3300;
  color: #fff;
  border-radius: 20rpx;
  padding: 12rpx 32rpx;
}
/* 套餐相关 */
.setmeal {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  text-align: left;
  line-height: 64rpx;
  justify-content: space-between;
  font-size: 26rpx;
}
.s-info view{
  border: 1rpx solid orange;
  border-radius: 20rpx;
  width: 100%;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.postage view {
  border: 1rpx solid orange;
  border-radius: 20rpx;
  width: 100%;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
/* 身份证部分 */
.icon-jia1 {
  font-size: 80rpx;
}
.cell {
  display: flex;
  align-items: center;
  line-height: 100rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 1rpx solid #ccc;
  font-size: 26rpx;
}
.cell > view:first-child {
  text-align: right;
  width: 24%;
  margin-right: 20rpx;
}
.cell input,
.cell picker {
  flex: 1
}
.cell .icon-view {
  display: flex;
   justify-content: flex-end; 
  align-items: center;
  width: 40%;
}

.cell .img-view {
  display: flex;
  justify-content: center; 
  align-items: center;
  width: 40%;
}
.img-view-pos {
  display: flex;
  position: relative;
}
.del {
  border-radius: 50%;
  width: 28rpx;
  height: 28rpx;
  background-color: red;
  text-align: center;
  line-height: 28rpx;
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-view image {
  width:80rpx;
  height:80rpx;
}

.case {
  width: 19%;
  text-align: right;
  margin-right: 20rpx;
}