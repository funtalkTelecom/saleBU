/* 支付保证金 */
.bail {
  width: 496rpx;
  background: #4f4f4f;
  line-height: 80rpx;
}
.pay {
  flex: 1;
  background: orange;
  line-height: 40rpx;
  
}
/* 出价 */
.center,
.stepper {
  display: flex;
  justify-content: center;
  align-items: center;
}
.stepper{
  background-color: #fff;
  color: #000;
  height: 68rpx;
  padding-left: 6rpx;
  padding-right: 6rpx;
}
.stepper>view {
  margin-right: 20rpx;
}
.stepper-bid {
  flex: 1;
  background: red;
  line-height: 80rpx;
  font-size: 16px;
  font-weight: 700;
