/* pages/auction/auction-detail.wxss */
page {
  padding-bottom: 80rpx;
}
.ep-swiper {
  position: relative;
}
swiper {
  height: 750rpx;
  width: 100%;
  /* padding: 50rpx;
  box-sizing: border-box; 图片有边距*/
  border-bottom: 1rpx dotted #ccc;
}
swiper image {
  /* box-sizing: border-box; */
    /* height: 650rpx; 图片有边距 */
   height: 750rpx;
  width: 100%; 
}
.top-position {
  position: absolute;
  bottom: 0;
  display: flex;
  font-size: 26rpx;
  color: #fff;
  width: 100%;
}
.active-before {
  background-color: #006600;
}
.active-ing {
  background-color: #FF9900;
}
.active-after {
  background-color: #CC0000;
}
 .top-text { 
  height: 40rpx;
  width: 160rpx;
  text-align: center;
  line-height: 40rpx;
}
.top-text-ing {
  height: 40rpx;
  width: 160rpx;
  text-align: center;
  line-height: 40rpx;
}
.top-date {
  flex: 1;
  background: #949494;
}
.ep-title {
  padding-left: 28rpx;
  padding-top: 28rpx;
  font-size: 26rpx;
  height: 140rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #ccc;
  position: relative;
}
.ep-name {
  font-weight: 700;
}
.ep-now-price {
  padding-top: 28rpx;
}
.ep-now-price text {
  color: red;
}
.collection {
  position: absolute;
   top: 50%;
   margin-top: -34rpx;
   right: 28rpx;
   text-align: center;
}
.collection text {
  color: #ccc;
}
.collection view {
  font-size: 26rpx;
}
.ep-rule {
  padding-left: 28rpx;
  font-size: 26rpx;
  height: 132rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #ccc;
  line-height: 62rpx;
}
.rule-l,.rule-r {
  float: left
}
.rule-l {
  width: 360rpx;
}
.bid {
  padding-top: 20rpx;
  height: 130rpx;
  box-sizing: border-box;
  border-bottom: 1rpx dotted #ccc;
}
.bid-num {
  font-size: 26rpx;
  width: 96rpx;
   float: left; 
  text-align: center
   
}
.bid-order {
  /* border: 1rpx solid #000;
  border-right: 0;
  border-bottom: 0; */
  display: flex;
  width: 640rpx;
  height: 96rpx;
  float: left;
}
.bid-order>view {
  width: 25%;
  border-right: 1rpx solid #000;
  border-bottom: 1rpx solid #000;
  border-top: 1rpx solid #000;
}
.bid-orderitme:first-child {
  border-left: 1rpx solid #000;
}
.bid-orderitme {
  position: relative;
  width: 160rpx;
  font-size: 26rpx;
}

.bid-orderitme text:last-child {
  color: red;
}
.bid-orderitme .out{
  background: #ccc;
}
.bid-orderitme-num {
  position: absolute;
  padding-top: 4rpx;
  top: 0rpx;
  left: 0;
  background: orange;
  border-right: 1rpx solid #000;
  border-bottom: 1rpx solid #000;
}
.bid-orderitme-id {
  margin-left: 56rpx;
  width: 100rpx;
  line-height: 40rpx;
  word-break: break-all;
  
}
