.container {
  margin-bottom: 30rpx;
}
.top {
  position: relative;
}
.top image{
  width: 100%;
  /* height: 260rpx; */
  display: block;
}
.top-position {
  position: absolute;
  bottom: 0;
  display: flex;
  font-size: 26rpx;
  color: #fff;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}
.top-text {
  background-color: orange;
  width: 160rpx;
  text-align: center;
}
.top-date {
  flex: 1;
  background: rgba(255, 153, 0, .6 );
  padding-left: 5%;
}
.active-before {
  background-color: #006600;
}
.active-ing {
  background-color: #4bc5ee;
}
.active-after {
  background-color: #CC0000;
}
.sideBar {
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  border-bottom: 1rpx dotted #ccc;
}
.sideBar-left{
  line-height: 40rpx;
  float: left;
}
.sideBar-right {
  /* box-sizing: content-box; */
  text-align: center;
  float: right;
  border-left: 1rpx solid #ccc;
  margin-right: 20rpx;
  padding-left: 20rpx;
}
.content {
  padding: 12rpx 0 0 8rpx;
  display: flex;
  font-size: 28rpx;
  position: relative;
}
.content>view {
  /* background: pink; */
  margin: 24rpx 0 0 12rpx;
}
.content image {
  width: 180rpx;
  height: 180rpx;
}
.p-name {
  font-weight: 700;
}
.p-num {
  margin-top: 48rpx;
}
.button{
  position: absolute;
  bottom: 0rpx;
  right: 30rpx;
  width: 200rpx;
  height: 44rpx; 
  border:1rpx solid #ccc;
  text-align: center;
  line-height: 44rpx;
  border-radius: 15rpx;
  background:#F8F8F8;
}
.red {
  color: red;
}
.icon-remindfill {
  color: yellow;
}