    <view class='paymode-main'>
        <view  class="{{defaultValue==1?'wx':''}}" bindtap='usewxpay' data-wxpay="1">微信支付</view>
        <view  class="{{defaultValue==2?'balance':''}}" bindtap='usewxpay' data-wxpay="2">线下支付</view>
        <view  class="{{defaultValue==4?'wx':''}}" bindtap='usewxpay' data-wxpay="4" hidden='{{!fenqiFlag}}'>分期付款</view>
      </view>
      <view class='offline' wx:if="{{defaultValue==2}}">
        <view>银行：中信银行</view>
        <view>户主：林永</view>
        <view>帐号：6217 6813 0292 6871</view>
        <view>温馨提示：付款时请备注所拍得到号码，如有任何疑问可拨打客服热线4009-183-365</view>
      </view>
  </zan-panel>

  <view  hidden='{{defaultValue==2?true:false}}' class="footer-but {{defaultValue==1?'wx-bgc':'balance-bgc'}}" bindtap='pay' >{{paytext}}</view>

</view>
