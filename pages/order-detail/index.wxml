<view>
  <zan-panel title="基本信息">
    <zan-row row-class="simple-info">
      <zan-col col="24">订单编号：{{order.orderId}}</zan-col>
      <zan-col col="24">下单时间：{{order.addDate}}</zan-col>
      <!-- <view hidden='{{order.status==1?true:false}}'> -->
      <zan-col col="24">支付方式：微信支付</zan-col>
      <zan-col col="24">支付时间：{{item.payDate}}</zan-col>
      <!-- </view> -->
      
    </zan-row>
  </zan-panel>
  <zan-panel title="收货地址">
    <view class='addr-main'>
      <view>
        <text class='iconfont icon-dizhi'></text>
      </view>
      <view>
        <view class='addr-np'>
          <view>{{order.personName}}</view>
          <view>{{order.personTel}}</view>
        </view>
        <view class='addr-content'>{{order.address}}</view>
      </view>
    </view>
  </zan-panel>

  <zan-panel title="商品清单">
    <zan-card card-class="test-card" thumb="https://img.yzcdn.cn/upload_files/2016/11/25/FpqPXlrMRjKwJs8VdTu3ZDJCj4j5.jpeg?imageView2/2/w/200/h/200/q/90/format/jpeg" useThumbSlot="{{ true }}" useDetailSlot="{{ true }}" wx:for="{{orderItem}}" wx:key="id">
      <view slot="detail-slot" class="zan-card__detail order-info">
        <view>乐语 联通妙畅聊卡北京-1707107-白卡</view>
        <view class='red'>￥{{item.price}}</view>
      </view>
    </zan-card>
  </zan-panel>

  <zan-panel title="">
    <zan-row row-class="simple-info line-h">
      <zan-col col="12">商品总额</zan-col>
      <zan-col col="12" col-class="align-r">￥{{order.total}}</zan-col>
      <zan-col col="12">运费</zan-col>
      <zan-col col="12" col-class="align-r">￥{{order.shippingTotal}}</zan-col>
      <zan-col col="24" col-class="align-r">
      <text hidden='{{order.status==1?false:true}}'>应</text>
      <text hidden='{{order.status==1?true:false}}'>实</text>付款：
        <text class='red'>￥{{order.total}}</text>
      </zan-col>
    </zan-row>
  </zan-panel>




</view>