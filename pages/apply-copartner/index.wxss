}
.page-container {
  height:100%;
}
.page-container>image{
  width:100%;
  height:100%;
  display:block;
  padding-bottom:70rpx;
  box-sizing:border-box;
}

.quickly-apply {
  position: fixed;
  bottom:0;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  background: red;
  width: 100%;
}
.pop-example__container {
  overflow: hidden;
  background: #fff;
}

.pop-example__container--bottom {
  width: 100vw;
}
.apply-title {
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  border-bottom: 1px solid #cfcfcf;
  position: relative;
  font-size: 34rpx;
}
