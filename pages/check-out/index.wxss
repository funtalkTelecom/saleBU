.order-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
}
.p-name {
  font-size: 30rpx;
  font-weight: 700;
}
.price-num {
  display: flex;
  justify-content: space-between;
}
.red {
  color: red;
  font-weight: 700;
}

.align-r {
  text-align: right;
}

.line-h {
  line-height: 64rpx;
  margin-top: 40rpx;
  border-top: 1rpx solid #f4f4f4;
}

.bottom_bar {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  z-index: 1;
  height: 80rpx;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
  /* box-sizing: content-box; */
  width: 100%;
}

.bail {
  width: 496rpx;
  background: #fff;
  line-height: 80rpx;
  color: red;
  font-weight: 700;
  border-top: 1rpx solid #ccc;
  box-sizing: border-box;
}

.pay {
  flex-grow: 1;
  /* width: 254rpx;  */
  background: orange;
  line-height: 80rpx;
}
