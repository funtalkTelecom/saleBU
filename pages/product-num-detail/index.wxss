/* pages/product-num-detail/index.wxss */

page {
  background-color: #f2f2f2;
}

.cardbody-title {
  line-height: 114rpx;
  font-size: 24px;
  text-align: center;
  background-color: #fff;
}

.cardbody-main {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #f2f2f2;
  margin: 2%;
}

.cardbody-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 1.5%;
  width: 47%;
  background-color: #fff;
  padding:20rpx 0;
  box-shadow: 4rpx 4rpx 12rpx #ddd;
  border-radius: 20rpx;
}

.item-phone {
  margin-bottom: 6rpx;
}

.item-price, .item-desc {
  font-size: 14px;
}

.color-cyan {
  color: #00b2ee;
}

.color-orange {
  color: orange;
  font-weight: 700;
}
.item-contact {
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
}

.nomore {
  margin-top: 60rpx;
}
.nomore image {
  width: 100rpx;
}
