.share-head {
  padding: 10rpx 30rpx 0 20rpx;
  border-bottom: 1px solid #f3f3f3;
  line-height: 70rpx;
  height: 70rpx;
}
.share-left {
  position:relative;
  padding-left: 10rpx;
}
.share-left::before {
  content: "";
  position:absolute;
  width: 6rpx;
  height: 100%;
  background-color: red;
  top: 50%;
  left: 0;
  transform: translate(0,-50%)
}
.share-list {
  padding:0 40rpx;
}
.share-item{
  display:flex;
  padding-top:20rpx;
}
.share-item image {
  width:100rpx;
  height:100rpx;
  min-width: 100rpx;
  min-height: 100rpx;
  display:inline-block;
  border-radius: 50%;
  box-shadow: 10rpx 10rpx 5rpx rgba(0, 0, 0, 0.4);
  background-color: #fff;
}
.share-text {
  padding-left:30rpx;
  display:flex;
  flex-direction:column;
  justify-content:space-around; 
}
.nomore {
  margin-top: 60rpx;
}
.nomore image {
  width: 100rpx;
}