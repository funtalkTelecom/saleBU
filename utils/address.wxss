/* 新增地址 */
.addr-add {
   display: flex; 
padding:20rpx 32rpx;
align-items: center;

}
.icon-xinzengdizhi {
  font-size: 70rpx;
  color: orange;
  margin-right: 50rpx;
}

/* 地址主体 */
.addr-main {
  display: flex;
  align-items: center;
}

.addr-np, .addr-content {
  margin-left: 8rpx;
}

.addr-np {
  display: flex;
  margin-top: 26rpx;
  /* line-height: 68rpx; */
  height: 60rpx;
  font-size: 28rpx;
}
.addr-np view:first-child {
  margin-right: 50rpx;
}

.addr-content {
  font-size: 28rpx;
  /* line-height: 68rpx; */
  padding-bottom: 32rpx;
  width: 560rpx;
}
/* 地址下滑线 */
.addr-icon {
  background: #fff url(data:image/png;base64,) repeat-x top left;
  height: 40rpx;
  margin: 0rpx 10rpx;
  background-size: 52rpx;
}
/* 地址图标 */
.icon-dizhi {
  font-size: 100rpx;
  color: orange;
}

/* 地址弹窗 */
.pop-example__container {
  overflow: hidden;
  background: #fff;
}

.pop-example__container--bottom {
  width: 100vw;
}
.spacing {
  height: 700rpx;
}

.spacing scroll-view {
  height: 620rpx;
}
.addr-item {
  padding-left:32rpx;
padding-right:32rpx;
border-bottom: 1rpx solid #ccc;

}
.add-addr {
  position: fixed;
  bottom: 0;
  background-color: orange;
  text-align: center;
  line-height: 80rpx;
  width: 100%;
  color: #fff;
  font-size: 36rpx;
  z-index: 999;
}
